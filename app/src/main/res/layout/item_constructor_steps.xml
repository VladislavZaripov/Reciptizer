<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables"
                android:layout_marginBottom="10dp">
    <EditText
            android:id="@+id/item_constructor_steps_editText_number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:inputType="number"
            tools:ignore="Autofill,LabelFor"/>
    <EditText
            android:id="@+id/item_constructor_steps_editText_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            tools:ignore="Autofill,LabelFor"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7F7F7F"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center">
        <ImageView
                android:id="@+id/item_constructor_steps_imageView_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"
                android:src="@drawable/no_img"
                tools:ignore="ContentDescription"
                android:background="#ffffff"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:id="@+id/item_constructor_steps_imageView_camera"
                    android:layout_weight="1"
                    android:src="@drawable/photo_camera"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    tools:ignore="ContentDescription"
                    android:background="#ffffff"/>
            <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:id="@+id/item_constructor_steps_imageView_load"
                    android:layout_weight="1"
                    android:src="@drawable/download_img"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    tools:ignore="ContentDescription"
                    android:background="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:id="@+id/item_constructor_steps_imageView_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_row"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"/>
</LinearLayout>

